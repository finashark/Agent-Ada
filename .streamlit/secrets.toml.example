# Secrets configuration example
# Copy this file to secrets.toml and fill in your API keys

[api_keys]
# Trading Economics API (for economic calendar)
# trading_economics_key = "your_key_here"

# Financial Modeling Prep API (for economic calendar & news)
# fmp_key = "your_key_here"

# Alpha Vantage API (alternative data source)
# alpha_vantage_key = "your_key_here"

# Binance API (for crypto funding rates)
# binance_api_key = "your_key_here"
# binance_api_secret = "your_secret_here"

# News API (for financial news)
# news_api_key = "your_key_here"

[settings]
# Default timezone
default_timezone = "Asia/Ho_Chi_Minh"

# Auto-refresh settings
auto_refresh_enabled = true
refresh_interval_seconds = 300
